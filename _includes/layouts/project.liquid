---
layout: site
---

{% if project.environment == "development" %}
  {% assign resources = "/resources" %}
{% else %}
  {% assign resources = site.resources %}
{% endif %}

<div class="page">

  <section>
  <div class="project box">

    <header>
      <h1>{{ title }}</h1>
      by {{ authors }}
    </header>

    <picture>
      <source type="image/webp" srcset="{{ resources }}/images/{{ name }}.webp">
      <source type="image/png" srcset="{{ resources }}/images/{{ name }}.png">
      <img class="projectImage" src="{{ resources }}/images/{{ name }}.png" width="{{ proj.data.imageWidth }}" height="{{ proj.data.imageHeight }}" alt="{{ imageAlt }}">
    </picture>

    <div>
      <div class="links">
      {% for resourceObject in links %}
        {% assign resource = resourceObject.resource %}
          <span class="link projectLink">
            {% if resource[0].size > 1 %}
              <em>{{ resource[0] }}:</em>
            {% endif %}
          </span>
          <span class="link projectLink">
            {% if resource.size < 4 %}
              <a href="{{ resource[2] }}">{{ resource[1] }}</a>
            {% else %}
              <a href="{{ resources }}/{{ resource[2] }}{{ name }}{{resource[3]}}">{{ resource[1] }}</a>
            {% endif %}
          </span>
      {% endfor %}
      </div>

      {{ content }}

    </div>
  </div>
  </section>
</div>
