---
layout: site
---

{% if jekyll.environment == "production" %}
  {% assign resources = site.resources %}
{% else %}
  {% assign resources = "/resources" %}
{% endif %}

<div class="page">

  <section>
  <div class="project box">

    <header>
      <h1>{{ title }}</h1>
      by {{ page.authors }}
    </header>

    <img class="projectImage" src="{{ resources }}/images/{{ page.project }}.png" alt="{{ page.imageAlt }}" />

    <div>
      <div class="links">
      {% for resourceObject in page.resources %}
        {% assign resource = resourceObject.resource %}
          <span class="link projectLink">
            {% if resource[0].size > 1 %}
              <em>{{ resource[0] }}:</em>
            {% endif %}
          </span>
          <span class="link projectLink">
            {% if resource.size < 4 %}
              <a href="{{ resource[2] }}">{{ resource[1] }}</a>
            {% else %}
              <a href="{{ resources }}/{{ resource[2] }}{{ page.project }}{{resource[3]}}">{{ resource[1] }}</a>
            {% endif %}
          </span>
      {% endfor %}
      </div>

      {{ content }}

    </div>
  </div>
  </section>
</div>
